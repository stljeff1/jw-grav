{% if page.header.title is not null %}
     <h3 class="section-title">{{ page.header.title }}</h3>
 {% endif %}

{% for project in page.header.projects %}
	<article class="project-spotlight">
	<div class="row">
		<div class="col-xs-12 col-md-8">
			<h4 class="title-heading">{{ project.name }}</h4>
			<p class="project-tags">Tags: <strong>{{ project.tags }}</strong></p>
			<div id='{{ project.ui_id }}-slideshow' class='carousel slide' data-ride='carousel' data-interval="4000"> 
						<ol class="carousel-indicators">
						    <li data-target="#{{ project.ui_id }}-slideshow" data-slide-to="0" class="active"></li>
						    <li data-target="#{{ project.ui_id }}-slideshow" data-slide-to="1"></li>
						    <li data-target="#{{ project.ui_id }}-slideshow" data-slide-to="2"></li>
						    <li data-target="#{{ project.ui_id }}-slideshow" data-slide-to="3"></li>
						</ol>
						<div class='carousel-inner' role='listbox'>
							{% for i in 1..4 %}
								<div class='item {% if i == 1 %}active{% endif %}'>
									{{ page.media[project.image_prefix ~ i ~ '.jpg'].html(project.name) }}
								</div>
							{% endfor %}
						</div>

					  <!-- Controls -->
					  <a class="left carousel-control" href="#{{ project.ui_id }}-slideshow" role="button" data-slide="prev">
					    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
					    <span class="sr-only">Previous</span>
					  </a>
					  <a class="right carousel-control" href="#{{ project.ui_id }}-slideshow" role="button" data-slide="next">
					    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
					    <span class="sr-only">Next</span>
					  </a>
					</div>

		</div>
		<div class="col-xs-12 col-md-4">
			<div class="box-item white-bg project-summary">
				<h5 class="title-heading">Summary</h5>
				<p>{{ project.summary }}</p>

			</div>

			<div class="box-item white-bg project-notes">
				{% for notes in project.notes %}
					<h5 class="title-heading"> {{ notes.title }}</h5>
					<ul>
						{% for item in notes.items %}
							<li>{{ item }}</li>
						{% endfor %}
					</ul>
				{% endfor %}
			</div>
		</div>
	</div>
</article>
{% endfor %}