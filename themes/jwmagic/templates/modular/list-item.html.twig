<div class="row grav-text-module ">
    {% set image = page.media.images|first %}
    {% if image %}
    		{% if page.header.image_align == 'right' %}
    			<div class="col-sm-8">
				{{ content }}
    			</div>
    			<div class="col-sm-4">
    				{{ image.cropResize(400,400).html(page.header.title, page.header.title, 'img-responsive') }}
    			</div>
    		{% else %}

    			<div class="col-sm-4">
    				
                    {{ image.cropResize(400,400).html(page.header.title, page.header.title, 'img-responsive') }}
    			</div>
    			<div class="col-sm-8">
    				{{ content }}
    			</div>
    		{% endif %}
    	{% else %}	
    		<div class="col-xs-12">
    			{{ content }}
    		</div>
    {% endif %}

</div>
