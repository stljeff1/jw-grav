{% if page.header.title is not null %}
     <h3 class="section-title">{{ page.header.title }}</h3>
 {% endif %}

{{ content }}

<div class="skills-listing">
	<div class="row justify-content-around">
		{% for skill in page.header.skills %}

			<div class="col-md-6 col-lg-5 separ">
				<div class="row align-items-center">

					<div class="d-none d-sm-block col-auto icon-skill">
						{{ page.media[skill.image].html(skill.title, skill.title, 'img-fluid') }}
					</div>
					<div class="col">
						<div class="media-heading title-skill">{{ skill.name }}</div>
						<div class="meter-skill">
							<div class="this-skill {{ skill.meterClass }}-bg skill-fill-{{ skill.size }}"></div>
						</div>
					</div>
				</div>

		</div>
		{% endfor %}
	</div>

	{% if page.header.otherSkills is not empty %}
		<div class="row other-skills-listing">
			{% for oSkill in page.header.otherSkills %}
					<div class="col-xs-12 col-sm-4 other-skills">
				<div class="white-bg box-item">
						<h4 class="{{ oSkill.headerClass }} title-heading">{{ oSkill.name }}</h4>
						<ul class="list-unstyled">
							{% for item in oSkill.items %}
								<li>
									{% if item.icon %}
										<div class="row oSkill">
											<div class="col-3">
												<img src="{{ url('theme://images/'~item.icon) }}" class="icon">
											</div>
											<div class="col-9">
												<strong>{{ item.name }}</strong>
											</div>
										</div>
									{% else %}
										<div class="oSkill">
											<strong>{{ item.name }}</strong>
										</div>
									{% endif %}
								</li>
							{% endfor %}
						</ul>	
					</div>
				</div>
			{% endfor %}

		</div>

	{% endif %}
</div>