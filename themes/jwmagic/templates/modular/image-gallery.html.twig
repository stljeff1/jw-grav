{% if page.header.title is not null %}
     <h3 class="section-title">{{ page.header.title }}</h3>
 {% endif %}

{{ content }}

<div id='{{ page.header.ui_id }}' class='carousel slide' data-ride='carousel' data-interval="2500"> 
	{% set imageCount = page.header.images|count %}
	{% if page.header.show_indicators %}
		<ol class="carousel-indicators">
			{% for i in 0..imageCount-1 %}
				<li data-target="#{{ page.header.ui_id }}" data-slide-to="{{ i }}" class="{% if i == 0 %} active {% endif %}"></li>
			{% endfor %}
		</ol>
	{% endif %}
	<div class='carousel-inner' role='listbox'>

		{% for image in page.header.images %}
			<div class="item {% if loop.first %} active {% endif %}">
				<h4 class='slide-title'>{{ image.title}}</h4>
				{% for key, item in image.image %}
					
					<div class="{{ page.header.ui_id }}-image">
						<img src="{{ url(item.path)}}" alt="{{ image.title }}" class="img-responsive" />
					</div>
				{% endfor %}		
			</div>
		{% endfor %}
	</div>
	
	<a class="left carousel-control" href="#{{ page.header.ui_id }}" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#{{ page.header.ui_id }}" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>

</div>

	