                    <div class="row">
                        <div class="col-xs-12 col-sm-4">

                                    <p><a href="{{ page.find('/connect').url }}">Jeff Wilkerson</a><br/>
                                       &copy; 2017</p>
                        </div>

                        <div class="col-xs-12 col-sm-8">

                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="#top">Back to Top</a></li>
