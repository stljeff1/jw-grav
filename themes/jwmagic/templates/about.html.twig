{% extends 'partials/base.html.twig' %}

{% set show_onpage_menu = header.onpage_menu == true or header.onpage_menu is null %}
{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

{% block javascripts %}
{% endblock %}


{% block bottom %}
    {{ parent() }}
{% endblock %}


{% block header %}

    {% include "partials/header.html.twig" %}

{% endblock %}

{% block pageContent %}
    {{ page.content }}
    {% set intro = page.find('/about/_introductions') %}
    {% set faces =  page.find('/about/_many-faces') %}
    <div class="container about-container">
        <div class="row">
            <div class="col-sm-12 col-md-8">
                <section id="{{intro.slug }}" class="{{ intro.header.body_classes }}">
                    {{ intro.content }}

                </section>
            </div>
            <div class="col-sm-12 col-md-4">
                <section id="{{ faces.slug }}" class="{{ faces.header.body_classes }}">
                    {{ faces.content }}

                </section>
            </div>
        </div>
    </div>
{% endblock %}


{% block footer %}
    {% include "partials/footer.html.twig" %}
{% endblock %}
